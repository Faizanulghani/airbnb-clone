<%- include('../partials/head.ejs') %>
  </head>
  <body>
    <%- include('../partials/nav.ejs') %>
    <main
      class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 w-[80%]"
    >
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Here are our Home Details:
      </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="rounded-lg overflow-hidden">
                  <img src="<%= home.photo %>" alt="<%= home.name %>" class="w-full h-96 object-cover">
              </div>
              
              <div class="space-y-6">
                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Description</h3>
                      <p class="text-gray-600"><%= home.description %></p>
                  </div>

                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Name</h3>
                      <p class="text-gray-600"><%= home.houseName %></p>
                  </div>
                  
                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Price</h3>
                      <p class="text-green-600 text-xl font-bold">$<%= home.price %> / night</p>
                  </div>
                  
                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Rating</h3>
                      <div class="flex items-center">
                          <span class="text-yellow-400 text-xl">â˜…</span>
                          <span class="ml-2 text-lg"><%= home.rating %> / 5</span>
                      </div>
                        <a href="/<%= home.rules %>" class="inline-flex items-center text-blue-600 hover:text-blue-800 mt-5">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5 5-5M12 4v12" />
                            </svg>
                            Download your Rules
                        </a>
                      <div class="mt-2">
                        <%- include('../partials/favourite.ejs') %>
                      </div>
                    </div>
              </div>
          </div>
    </main>
  </body>
</html>
