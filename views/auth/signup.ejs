<%- include('../partials/head.ejs') %>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/nav.ejs') %>

  <main class="flex-grow flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-2xl bg-white p-10 rounded-2xl shadow-xl">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Create Your Airbnb Account</h1>

      <% if(typeof errorMessages !== 'undefined' && errorMessages && errorMessages.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <ul class="list-disc list-inside space-y-1">
            <% errorMessages.forEach(error => { %>
              <li><%= error %></li>
           <% }); %>
          </ul>
        </div>
     <% } %>

      <form action="/signup" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
            <div class="relative">
              <input type="text" value="<%= oldInput.firstName ? oldInput.firstName : '' %>" name="firstName" id="firstName" required
                class="w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
              <div class="absolute inset-y-0 left-3 flex items-center text-gray-400">
                <!-- User Icon -->
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5.121 17.804A4 4 0 016 16h12a4 4 0 01.879 1.804M12 14a4 4 0 100-8 4 4 0 000 8z" />
                </svg>
              </div>
            </div>
          </div>

          <!-- Last Name -->
          <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
            <div class="relative">
              <input type="text" value="<%= oldInput.lastName ? oldInput.lastName : '' %>" name="lastName" id="lastName" required
                class="w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
              <div class="absolute inset-y-0 left-3 flex items-center text-gray-400">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5.121 17.804A4 4 0 016 16h12a4 4 0 01.879 1.804M12 14a4 4 0 100-8 4 4 0 000 8z" />
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <div class="relative">
            <input type="email" value="<%= oldInput.email ? oldInput.email : '' %>" name="email" id="email" required
              class="w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
            <div class="absolute inset-y-0 left-3 flex items-center text-gray-400">
              <!-- Mail Icon -->
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 12H8m8 0a4 4 0 00-8 0m8 0a4 4 0 01-8 0" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <div class="relative">
            <input type="password" value="<%= oldInput.password ? oldInput.password : '' %>" name="password" id="password" required
              class="w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
            <div class="absolute inset-y-0 left-3 flex items-center text-gray-400">
              <!-- Lock Icon -->
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2zM5.586 15.586a2 2 0 012.828 0L12 19.172l3.586-3.586a2 2 0 112.828 2.828l-5 5a2 2 0 01-2.828 0l-5-5a2 2 0 010-2.828z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Confirm Password -->
        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
          <div class="relative">
            <input type="password" name="confirmPassword" id="confirmPassword" required
              class="w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
            <div class="absolute inset-y-0 left-3 flex items-center text-gray-400">
              <!-- Lock Icon -->
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2zM5.586 15.586a2 2 0 012.828 0L12 19.172l3.586-3.586a2 2 0 112.828 2.828l-5 5a2 2 0 01-2.828 0l-5-5a2 2 0 010-2.828z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- User Type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">User Type</label>
          <div class="flex gap-6">
            <label class="inline-flex items-center">
              <input type="radio" name="userType" value="guest" class="text-red-500" checked="<% oldInput.userType === 'guest' %>" />
              <span class="ml-2 text-gray-700">Guest</span>
            </label>
            <label class="inline-flex items-center">
              <input type="radio" name="userType" value="host" class="text-red-500" checked="<% oldInput.userType === 'host' %>" />
              <span class="ml-2 text-gray-700">Host</span>
            </label>
          </div>
        </div>

        <!-- Terms -->
        <div class="flex items-start">
          <input type="checkbox" name="terms" id="terms" class="mt-1 mr-2" required />
          <label for="terms" class="text-sm text-gray-600">I agree to the
            <a href="#" class="text-red-500 hover:underline">terms and conditions</a>
          </label>
        </div>

        <!-- Submit -->
        <div>
          <button type="submit"
            class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300 font-semibold text-lg">
            Register
          </button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
