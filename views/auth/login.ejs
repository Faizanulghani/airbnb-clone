<%- include('../partials/head.ejs') %>
</head>
<body class="bg-gradient-to-br from-red-50 to-white min-h-screen">

  <!-- Navbar: Always on Top, Full Width -->
  <header class="w-full bg-white shadow-md">
    <%- include('../partials/nav.ejs') %>
  </header>

  <!-- Login Card Centered -->
  <main class="flex items-center justify-center min-h-[calc(100vh-80px)] px-4 py-10">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8 sm:p-10 border border-gray-200">
      <h1 class="text-3xl sm:text-4xl font-extrabold text-center text-red-600 mb-8">Welcome Back</h1>

      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6 text-sm">
          <ul class="list-disc list-inside space-y-1">
            <% errors.forEach(error => { %>
              <li><%= error %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>

      <form action="/login" method="POST" class="space-y-6">

        <!-- Email -->
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-1">Email Address</label>
          <div class="flex items-center border border-gray-300 rounded-md px-3 py-2 focus-within:ring-2 focus-within:ring-red-500">
            <!-- Email Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m0 0V6a4 4 0 018 0v6m0 0v6" />
            </svg>
            <input
              type="email"
              name="email"
              id="email"
              value="<%= oldInput.email ? oldInput.email : "" %>"
              placeholder="Enter your email"
              class="w-full outline-none bg-transparent text-gray-700"
              required
            />
          </div>
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-1">Password</label>
          <div class="flex items-center border border-gray-300 rounded-md px-3 py-2 focus-within:ring-2 focus-within:ring-red-500">
            <!-- Lock Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3zm0 0v4m0 0v4m0-4h4m-4 0H8" />
            </svg>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Enter your password"
              class="w-full outline-none bg-transparent text-gray-700"
              required
            />
          </div>
        </div>

        <!-- Submit -->
        <button
          type="submit"
          class="w-full bg-red-500 text-white font-semibold py-2 rounded-md hover:bg-red-600 transition duration-300 shadow-md"
        >
          Login
        </button>
      </form>

      <p class="mt-6 text-center text-sm text-gray-600">
        Donâ€™t have an account?
        <a href="/register" class="text-red-500 font-medium hover:underline">Sign up</a>
      </p>
    </div>
  </main>
</body>
</html>
